package greeter

// create a list
val ls = List(1,2,3,4,5) //> ls : List[Int] = List(1, 2, 3, 4, 5)

// split a list
adjsublist(ls) //> res0: List[List[Int]] = List(List(1, 2, 3, 4, 5), List(2, 3, 4, 5))

// create a list of lists
adjsublist2(ls) //> res1: List[List[Int]] = List(List(1), List(2), List(3), List(4), List(5))
//test(ls)
val l2 = List(1, 1, 1, 4, 4, 4, 7, 7,
2, 2, 4, 2,1) //> l2 : List[Int] = List(1, 1, 1, 4, 4, 4, 7, 7, 2, 2, 4, 2, 1)

// seperate lists by size
pack(l2) //> res2: List[List[Int]] = List(List(1, 1, 1), List(4, 4, 4), List(7, 7), List
//| (2, 2), List(4), List(2), List(1))

findlast(ls,4) //> res3: Int = 4
//adjsublist(ls)
count(l2,1) //> res4: Int = 4
